        {
          "name": "Register New Farmer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ahmed Hassan\",\n  \"email\": \"ahmed@farm.com\",\n  \"password\": \"password123\",\n  \"role\": \"farmer\",\n  \"country\": \"Egypt\",\n  \"governorate\": \"Giza\",\n  \"lang\": \"ar-EG\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
          ,
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201 or 200\", function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
                  "var json = {}; try { json = pm.response.json(); } catch(e) {}",
                  "pm.test(\"Response has user object\", function(){ pm.expect(json).to.have.property('user'); });",
                  "pm.test(\"User.lang equals ar-EG when provided\", function(){ if(json.user && json.user.lang) { pm.expect(json.user.lang).to.eql('ar-EG'); } else { pm.expect(true).to.be.ok; } });",
                  "// set token and farmerId if present (sets both environment and collection variables)",
                  "var token = json.token || (json.user && json.user.token) || (json.data && json.data.token) || json.accessToken || (json.result && json.result && json.result.token);",
                  "if(token){ pm.environment.set('token', token); try { pm.collectionVariables.set('token', token); } catch(e){} }",
                  "var fid = (json.user && (json.user._id || json.user.id)) || (json.farmerId) || (json.data && json.data.user && (json.data.user._id || json.data.user.id));",
                  "if(fid){ pm.environment.set('farmerId', fid); try { pm.collectionVariables.set('farmerId', fid); } catch(e){} }"
                ]
              }
            }
          ]
        },
